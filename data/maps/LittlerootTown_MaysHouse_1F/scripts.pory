script PlayersHouse_1F_EventScript_GoodMorning {
	msgbox("Mom: Good morning! How did\nyou sleep, {PLAYER}?\pToday's the big day!\pJust think! The next time we see\neach other, you'll be walking\linto my Gym to challenge me!", MSGBOX_DEFAULT)
	closemessage
	applymovement(LOCALID_MOM, Common_Movement_WalkInPlaceFasterDown)
	waitmovement(0)
	msgbox("Not that you'll defeat me…", MSGBOX_DEFAULT)
	closemessage
	applymovement(LOCALID_MOM, Common_Movement_WalkInPlaceFasterUp)
	waitmovement(0)
	msgbox("Mom: Oh, yes!\p{PLAYER}, you're going to need all\nof these!", MSGBOX_DEFAULT)
	closemessage
	giveitem(ITEM_MEGA_RING)
	giveitem(ITEM_Z_POWER_RING)
	giveitem(ITEM_DYNAMAX_BAND)
	giveitem(ITEM_TERA_ORB)
	giveitem(ITEM_EXP_SHARE)
	setflag(FLAG_EXP_SHARE_ALL)
	msgbox("Mom: You'd have no business\nchallenging the Rika League Gyms\lwithout the proper gear.\pTrust me!\pI'm off for work, okay?\pHead out to Darkwing Holt, {PLAYER}.\pMake sure you pick a good one!", MSGBOX_DEFAULT)
	closemessage
}

script RivalsHouse_1F_EventScript_Leonard {
	lock
	faceplayer
	if (flag(FLAG_RECOVERED_DEVON_GOODS) == TRUE) {
		msgbox(DarkwingGrove_LeonardsHouse_Text_ExplainPokeTools, MSGBOX_DEFAULT)
		closemessage
	} elif (flag(FLAG_BADGE01_GET) == TRUE) {
		msgbox(DarkwingGrove_LeonardsHouse_Text_1stBadgeEarned, MSGBOX_DEFAULT)
		closemessage
		giveitem(ITEM_DEVON_PARTS)
		setflag(FLAG_RECOVERED_DEVON_GOODS)
		msgbox(DarkwingGrove_LeonardsHouse_Text_ExplainPokeTools, MSGBOX_DEFAULT)
		closemessage
	} else {
		msgbox(DarkwingGrove_LeonardsHouse_Text_WantSomethingCool, MSGBOX_DEFAULT)
		closemessage
	}
	release
}

movement PlayersHouse_1F_Movement_MomToStairsLeft {
	walk_up
	walk_right * 5
	walk_in_place_up
}

movement PlayersHouse_1F_Movement_MomToStairsRight {
	walk_up
	walk_right * 6
	walk_in_place_up
}

movement PlayersHouse_1F_Movement_MomLeave {
	walk_down * 7
}

text RivalsHouse_1F_Text_LikeChildLikeFather{
	format("Dad: Good morning, {PLAYER}!\nFirst Pokémon today, yes?\pNo time to rest, then! Go!\pI can't wait to see it.")
}

text DarkwingGrove_LeonardsHouse_Text_1stBadgeEarned {
	format("Leonard: No way! You got the Somber Badge?\p"
	"Okay, a deal's a deal.\p"
	"One of those Cipher guys gave me a sneak peek at their latest tech. I just pretended I was a hardcore Trainer and they believed me. Talk about lucky!\p"
	"Only thing is, this tech they gave me is meant for Pokémon. Like, it's specifically designed for them.\p"
	"I don't really have a use for it, but it seems like you might. So, here you go!")
}

text DarkwingGrove_LeonardsHouse_Text_ExplainPokeTools {
	format("Leonard: The PokéTools let your Pokémon do cool stuff outside of battle.\p"
	"That set I just gave you should grant any Pokémon the ability to cut down a tree!\p"
	"Aren't Cipher's inventions so cool?")
}

text DarkwingGrove_LeonardsHouse_Text_WantSomethingCool {
	format("Leonard: Hi. Want something super awesome?\p"
	"…On second thought, you don't seem like you'd get much use out of it.\p"
	"{PLAYER}, come back when you've got a Gym Badge. Okay?")
}