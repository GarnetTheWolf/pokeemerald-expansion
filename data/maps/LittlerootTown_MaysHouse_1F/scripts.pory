script RivalsHouse_1F_EventScript_RivalMom {
	lock
	faceplayer
	if(flag(FLAG_SYS_POKEMON_GET) == TRUE)
	{
		goto(PlayersHouse_1F_EventScript_MomHealsParty)
	} else {
		msgbox(RivalsHouse_1F_Text_LikeChildLikeFather, MSGBOX_DEFAULT)
	}
	release
}

script PlayersHouse_1F_EventScript_DownstairsLeft {
	lockall
	applymovement(LOCALID_MOM, Common_Movement_WalkInPlaceUp)
	waitmovement(0)
	playse(SE_PIN)
	applymovement(LOCALID_MOM, Common_Movement_ExclamationMark)
	waitmovement(0)
	msgbox("Mom: {PLAYER}!", MSGBOX_DEFAULT)
	closemessage
	applymovement(LOCALID_MOM, PlayersHouse_1F_Movement_MomToStairsLeft)
	waitmovement(0)
	call(PlayersHouse_1F_EventScript_GoodMorning)
	applymovement(LOCALID_MOM, PlayersHouse_1F_Movement_MomLeave)
	waitmovement(0)
	setvar(VAR_LITTLEROOT_INTRO_STATE, 2)
	setvar(VAR_LITTLEROOT_TOWN_STATE, 0)
	setflag(FLAG_HIDE_LITTLEROOT_TOWN_BRENDANS_HOUSE_MOM)
	removeobject(LOCALID_MOM)
	playse(SE_EXIT)
	clearflag(FLAG_HIDE_LITTLEROOT_TOWN_FAT_MAN)
	clearflag(FLAG_HIDE_ROUTE_101_BIRCH)
	setrespawn(HEAL_LOCATION_LITTLEROOT_TOWN_BRENDANS_HOUSE_2F)
	releaseall
}

